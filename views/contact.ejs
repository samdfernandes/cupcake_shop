<!DOCTYPE html>
<html lang="en">
<head>
        <% include ../partials/head.ejs %>
</head>
<body>
    <!-- top nav -->
    <% include ../partials/nav.ejs %>

    <!-- Cupcakes -->
    <div class="container">

            <div class="myContainer">
                    <form action="mailto:generic@gmail.com" method="POST">
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email">
                        </div>
                        <div class="form-group">
                                <label for="message">Your Message</label>
                                <textarea type="textarea" class="form-control" id="message" name="message">
                            </div>
                        <div class="form-group">
                            <label for="type"></label>
                            <input type="text" class="form-control" id="type" name="type" placeholder="cupcake, dessert bar, cake pop, cookie, macarron, other">
                        </div>
                        <div class="form-group">
                                <label for="price">Unit Price</label>
                                <input type="number" class="form-control" id="price" name="price">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
            

    </div>
    <!-- bottom / Store Info -->

    <% include ../partials/footer.ejs%>
