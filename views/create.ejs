<!DOCTYPE html>
<html lang="en">
<head>
        <% include ../partials/head.ejs %>
</head>
<body>
    <% include ../partials/nav.ejs %>
    <!-- create form -->
    <div class="container">
        <br>
        <br>
            <div class="row">
                    <form action="/" method="POST" class="col s12">

                      <div class="row">
                        <div class="input-field col s6">
                          <input placeholder="Strawberry Cupcake" id="name" type="text" name="name" class="validate">
                          <label for="name">Name/Title</label>
                        </div>
                        <div class="input-field col s6">
                          <input id="unitPrice" type="text" class="validate" name="unitPrice" placeholder="3.50">
                          <label for="unitPrice">Unit Price</label>
                        </div>
                      </div>

                      <div class="row">
                            <div class="input-field col s12">
                                    <textarea id="description" name="description" class="materialize-textarea" placeholder="Vanilla Cake, filled with Strawberry Jam, topped with a Strawberry Frosting swirl."></textarea>
                                    <label for="description">Description</label>
                            </div>
                      </div>

                      <div class="row">
                            <div class="input-field col s12">
                                    <input type="text" id="image" name="image" class="materialize-textarea" placeholder="http://www.somesite.com/someimage.jpg"></input>
                                    <label for="image">Image URL</label>
                            </div>
                      </div>

                      <div class="row">
                            <div class="input-field col s12">
                                    <input type="text" id="type" name="type" placeholder="cupacke, cookie, macaron, cakepop" class="validate">
                                    <label for="type">Type</label>
                            </div>
                      </div>

                      <div class="row">
                            <div class="input-field col s12">
                                <input type="submit" class="btn" value="Submit">
                            </div>
                      </div>
                    </form>
                  </div>
                        
                
                
    </div>

    <% include ../partials/footer.ejs %>
</body>
</html>